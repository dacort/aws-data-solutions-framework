{
  "apiVersion": "networking.k8s.io/v1",
  "kind": "NetworkPolicy",
  "metadata": {
    "name": "allow-pod-to-pod-and-internet",
    "namespace": "benchns"
  },
  "spec": {
    "podSelector": {},
    "policyTypes": [
      "Ingress",
      "Egress"
    ],
    "ingress": [
      {
        "from": [
          {
            "podSelector": {}
          }
        ]
      }
    ],
    "egress": [
      {
        "to": [
          {
            "ipBlock": {
              "cidr": "0.0.0.0/0"
            }
          }
        ]
      }
    ]
  }
}